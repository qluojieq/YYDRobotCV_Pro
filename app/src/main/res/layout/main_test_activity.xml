<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:text="开始收拾游戏"
        android:onClick="startPersonDetect"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:text="注册人脸"
        android:onClick="startPersonRegist"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <Button
        android:text="关闭人体检测"
        android:onClick="closePersonDetect"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <Button
        android:text="启动人脸检测"
        android:onClick="startFaceDetect"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
    <Button
        android:text="关闭人脸检测"
        android:onClick="stopFaceDetect"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</LinearLayout>