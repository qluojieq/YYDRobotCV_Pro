<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="289dp"
    android:background="@mipmap/bg_finish"
    android:layout_height="175dp">
    
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/reference_dialog"
        android:textSize="15sp"
        android:textColor="@color/colorText"
        android:text="离开你输入的数据将不会被保存"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/reference_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cancel_confirm"
                android:background="@mipmap/btn_qx"
                android:gravity="center"
                android:text="确 认"
                android:textSize="14sp"
                android:textColor="@color/colorTextWrite"
                android:layout_width="77dp"
                android:layout_height="29dp" />
            <TextView
                android:id="@+id/cancel_close"
                android:layout_marginLeft="38dp"
                android:background="@mipmap/btn_qx"
                android:gravity="center"
                android:text="取 消"
                android:textSize="14sp"
                android:textColor="@color/colorTextWrite"
                android:layout_width="77dp"
                android:layout_height="29dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>