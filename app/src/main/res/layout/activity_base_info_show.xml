<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseInfoShowActivity">
    <Button
        android:id="@+id/base_info_back"
    android:onClick="baseinfoBace"
    android:text="返回"
    android:layout_width="60dp"
    android:layout_height="60dp" />
    <Button
        android:layout_alignParentEnd="true"
        android:onClick="baseinfoDelete"
        android:text="删除"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/base_show_head_img"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/base_show_head_img"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/base_show_name"
                android:text="姓名 ： Brandon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/base_show_gender"

                android:text="性别 ： 男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/base_show_phone"

                android:text="电话 ： 13076990306"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/base_show_birthday"

                android:text="生日 ： 88-12-17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/base_show_recognizer_count"
                android:text="被访问次数 ： 1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>